<% @post_images.each do |post_image| %> <!--ユーザー詳細画面-->
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= attachment_image_tag post_image, :image %>
  <% end %>
  <p>Profile_image：<%= image_tag('sample-author1.jpg') %></p>
  <p>Title：<%= post_image.shop_name %></p>
  <p>Opinion：<%= post_image.caption %></p>
  <p>：<%= post_image.user.name %></p>
</div>
<% end %>
<%= paginate @post_images %>